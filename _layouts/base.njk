<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

<script>

if (window.netlifyIdentity) {
  window.netlifyIdentity.on("init", user => {
    if (!user) {
      window.netlifyIdentity.on("login", () => {
        document.location.href = "/admin/";
      });
    }
  });
}
  // Fade-up scroll animations
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('visible'); });
  }, { threshold: 0.08 });
  document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));

  // Hero word reveal
  document.querySelectorAll('.hero-hl .w').forEach((w, i) => {
    setTimeout(() => w.classList.add('on'), 600 + i * 110);
  });

  // Case filtering — supports multiple categories
  window.filterCases = function(cat, btn) {
    document.querySelectorAll('.tab').forEach(b => b.classList.remove('on'));
    btn.classList.add('on');
    document.querySelectorAll('.case-card').forEach(card => {
      const cats = (card.dataset.category || '').split(' ');
      card.style.display = (cat === 'all' || cats.includes(cat)) ? 'block' : 'none';
    });
  };

  // Mobile nav
  const hamburger = document.querySelector('.nav-hamburger');
  const navLinks  = document.querySelector('.nav-links');
  if (hamburger) hamburger.addEventListener('click', () => navLinks.classList.toggle('open'));

  // Smooth scroll
  document.querySelectorAll('a[href^="#"], a[href^="/#"]').forEach(a => {
    a.addEventListener('click', e => {
      const id = a.getAttribute('href').replace('/', '');
      if (id.length > 1) {
        const t = document.querySelector(id);
        if (t) { e.preventDefault(); t.scrollIntoView({ behavior: 'smooth' }); }
      }
    });
  });
</script>
